{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "preserve",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@finance-tracker/data-access": ["libs/data-access/src/index.ts"],
      "@finance-tracker/institutions/Routes": [
        "apps/institutions/src/app/app.routes.ts"
      ],
      "@finance-tracker/investments/Routes": [
        "apps/investments/src/app/app.routes.ts"
      ],
      "@finance-tracker/models": ["libs/models/src/index.ts"],
      "@finance-tracker/ui": ["libs/ui/src/index.ts"],
      "@finance-tracker/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
